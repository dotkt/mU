SetAttributes[Assert, HoldFirst]
Assert[e_] := If[Evaluate[e] === True, True, Print["Assertion ", e, " Failed!"]]
Assert[x === x]
Assert[$x =!= x]
Assert[0.7 == 0.7]
(*Assert[1+0.7 == 1.7]*)
Assert[10! == 3628800]
Assert[2 N[1/2,100] == 1]
Assert[N[4 ArcTan[1]] > 3.1415926 && N[4 ArcTan[1]] < 3.1415927]
Assert[D[x Sin[x],x] == x Cos[x]+Sin[x]]
Assert[Integrate[x^2,x] == 1/3 x^3]
Assert[Integrate[1/x,x] == Log[x]]
Assert[Integrate[E^x,x] == E^x]
Assert[Integrate[1/(1 + x^2), x] == ArcTan[x]]
Assert[Block[{a,b}={3,4};a+b] == 7]